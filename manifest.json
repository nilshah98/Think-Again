{
    "name": "Think Again",
    "description" : "Pause, Think Again, Sure you don't have anywhere better to spend your time?",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "Think Again"
      },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "scripts":[
            "backgroundTabs.js"
        ],
        "persistent": false
    },
    "permissions":[
        "background",
        "tabs",
        "storage"
    ]
  }