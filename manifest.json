{
    "name": "Think Again",
    "description" : "Pause, Think Again, Sure you don't have anywhere better to spend your time?",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_idle",
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts":[
            "backgroundTabs.js"
        ],
        "persistent": false
    },
    "permissions":[
        "background",
        "tabs"
    ]
  }